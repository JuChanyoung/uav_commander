#include "airdrone_control.h"

Airdrone_Driver::Airdrone_Driver()
{
    takeoff_pub = n_.advertise <std_msgs::Empty > ("/ardrone/takeoff", 1);
    land_pub    = n_.advertise <std_msgs::Empty > ("/ardrone/land"   , 1);
    reset_pub   = n_.advertise <std_msgs::Empty > ("/ardrone/reset"  , 1);
}

void Airdrone_Driver::TakeOff ()
{
    std_msgs::Empty msg;
    takeoff_pub.publish(msg);

}

void Airdrone_Driver::EmergencyToggle()
{
    std_msgs::Empty msg;
    reset_pub.publish(msg);

}

void Airdrone_Driver::Land ()
{
    std_msgs::Empty msg;
    land_pub.publish(msg);
}
